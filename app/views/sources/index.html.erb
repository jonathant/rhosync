<h1>Listing sources for <%=@app.name%></h1>
<table>
  <tr>
    <th>Name</th>
    <th>URL</th>
  </tr>

<% for source in @sources %>
  <tr>
    <td><%=link_to source.name,edit_app_source_path(:id=>source.id,:app_id=>@app.id) %></td>
    <td><%=source.url%></td>
    <td><%= link_to 'X',{:action=>"destroy",:app_id=>@app.id}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<p>
<%=link_to "Refresh All",:controller=>"apps",:action=>"refresh",:id=>@app.id%>
</p> 
<br />
