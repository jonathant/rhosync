<%= link_to "Load all sources from YAML", :app_id=>@app.id,:action=>"pick_load"  %><br/>
<%= link_to "Save all sources to YAML", :app_id=>@app.id,:action=>"pick_save"  %><br/>
-->
<%= link_to 'Create new source', :action=>"sources",:app=>@app,:action=>"new" %><br/>
<%= link_to 'Back to application',:controller=>"apps",:action=>"edit",:id=>@app.id%><br/>
<% if @current_user.nil? %><br/>
<%= link_to 'Login',{:controller=>'sessions',:action=>'new'}%><br/>
<%= link_to 'Register',{:controller=>'users',:action=>'new'}%><br/>
<%else%>
<%= link_to 'Logout',{:controller=>'sessions',:action=>'destroy'}%><br/>
<%end%>